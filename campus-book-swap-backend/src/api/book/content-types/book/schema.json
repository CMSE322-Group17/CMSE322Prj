{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "rating": {
      "type": "integer",
      "default": 0,
      "max": 5
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "New",
        "Like New",
        "Good",
        "Fair",
        "Poor",
        "Digital Copy"
      ],
      "required": true
    },
    "exchange": {
      "type": "string"
    },
    "subject": {
      "type": "string"
    },
    "course": {
      "type": "string"
    },
    "seller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "books"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "bookOfWeek": {
      "type": "boolean",
      "default": false
    },
    "bookOfYear": {
      "type": "boolean",
      "default": false
    },
    "displayTitle": {
      "type": "string"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "likes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "likedBooks"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "books"
    },
    "transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "book"
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::message.message",
      "mappedBy": "book"
    },
    "bookType": {
      "type": "enumeration",
      "enum": [
        "For Sale",
        "For Swap"
      ],
      "default": "For Sale",
      "required": true
    },
    "price": {
      "type": "float",
      "required": false,
      "default": 0
    },
    "wishlists": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::wishlist.wishlist",
      "mappedBy": "book"
    }
  }
}
